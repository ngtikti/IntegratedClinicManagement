@model IEnumerable<ClinicManagementProject.Models.Doctor>

@{Layout = "~/views/Doctor/_Layout.cshtml";}

<body>
    <table class="table table-light table-bordered" width="100%" height="80%">
        <tr>
            <td>
                <div style="top:0px; border:1px solid red;">
                    <table border="0" align="center">
                        <tr height="100%">
                            <td height="70%" width="50%" valign="middle" align="center">
                                <h1>WELCOME TO FAMILY CLINIC </h1><br /> <h3>Your Health is Paramount to us</h3>
                            </td>

                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
    <br />
    <h1 id="main" class="alert alert-success">Our Doctors</h1>
    <br />
    <table class="table table-light" align="center" width="60%">
        <thead>
            <tr>
                <th width="20%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th width="10%">
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th width="10%">
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th width="60%">
                    @Html.DisplayNameFor(model => model.Specialization)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td width="20%">
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td width="10%">
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td width="10%">
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td width="60%">
        <p>
            @Html.DisplayFor(modelItem => item.Specialization)
        </p>
    </td>
</tr>
       }
        </tbody>
    </table>
</body>
</html>
